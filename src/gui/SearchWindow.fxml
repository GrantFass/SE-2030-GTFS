<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.SearchWindowController"
      maxHeight="Infinity" maxWidth="Infinity" minHeight="400" minWidth="300" prefHeight="400.0"
      prefWidth="600" spacing="10">
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>
    <HBox spacing="10" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" maxWidth="Infinity" maxHeight="100"
          minWidth="20" minHeight="20">
        <TextArea fx:id="description" wrapText="true" editable="false" HBox.hgrow="ALWAYS"
                  VBox.vgrow="ALWAYS"
                  maxWidth="Infinity" maxHeight="100" minWidth="20" minHeight="20"/>
        <Button text="?" onAction="#displayHelp" alignment="CENTER" HBox.hgrow="ALWAYS"
                VBox.vgrow="ALWAYS" maxWidth="100" maxHeight="100" minWidth="20" minHeight="20"/>
    </HBox>
    <HBox HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity"
          spacing="10">
        <VBox HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity"
              spacing="10">
            <VBox HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity"
                  spacing="10">
                <Label text="Output Type" alignment="CENTER" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"
                       maxWidth="Infinity" maxHeight="Infinity"/>
                <ComboBox fx:id="outputType" value="Output Type" HBox.hgrow="ALWAYS"
                          VBox.vgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="route_id"/>
                            <String fx:value="stop_id"/>
                            <String fx:value="StopTime"/>
                            <String fx:value="trip_id"/>
                        </FXCollections>
                    </items>
                </ComboBox>
            </VBox>
            <VBox HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity"
                  spacing="10">
                <Label text="Input Type" alignment="CENTER" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"
                       maxWidth="Infinity" maxHeight="Infinity"/>
                <ComboBox fx:id="inputType" value="Input Type" HBox.hgrow="ALWAYS"
                          VBox.vgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="route_id"/>
                            <String fx:value="stop_id"/>
                            <String fx:value="StopTime"/>
                            <String fx:value="trip_id"/>
                        </FXCollections>
                    </items>
                </ComboBox>
            </VBox>
            <VBox HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity"
                  spacing="10">
                <Label text="Input" alignment="CENTER" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"
                       maxWidth="Infinity" maxHeight="Infinity"/>
                <TextField fx:id="input" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" maxWidth="Infinity"
                           maxHeight="Infinity"/>
            </VBox>
            <Button onAction="#search" text="Search" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"
                    maxWidth="Infinity" maxHeight="Infinity"/>
        </VBox>
        <VBox HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity"
              spacing="10">
            <Label text="Output" alignment="CENTER" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"
                   maxWidth="Infinity" maxHeight="Infinity"/>
            <TextArea fx:id="output" editable="false" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"
                      maxWidth="Infinity" maxHeight="Infinity"/>
        </VBox>
    </HBox>
</VBox>
